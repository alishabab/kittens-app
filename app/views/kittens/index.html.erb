<h1> All Kittens </h1>

<% @kittens.each do |kitten| %>
  <div style = "background-color: lightgray"> 
    <p><%=kitten.name%></p>
    <p><%=kitten.age%></p>
    <p><%=kitten.softness%></p>
    <p><%=kitten.cuteness%></p>
    <%= link_to 'Edit', edit_kitten_path(kitten)%>
    <%= link_to 'Delete', kitten_path(kitten), method: 'delete'%>
  </div> 
<%end%>
